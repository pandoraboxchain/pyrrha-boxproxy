    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/src/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Infura",
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/src/index.js",
            "env": {
                "USE_HOST": "infura"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch RSK",
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/src/index.js",
            "env": {
                "USE_HOST": "rsk"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Rinkeby",
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/src/index.js",
            "env": {
                "USE_HOST": "rinkeby"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug Remote Docker",
            "address": "localhost",
            "port": 5858,
            "restart": true,
            "sourceMaps": true,
            "localRoot": "${workspaceRoot}/app/",
            "remoteRoot": "/app-compiled/",
            "protocol": "inspector"
        }
    ]
}